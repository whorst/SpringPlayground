<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id = "cEventHandlerClass" class = "com.SpringSandbox.SpringSandbox.TheSpringContext.CEventHandlerClass">
        <property name = "message" value = "Hello World!"/>
    </bean>

    <bean id = "cStartEventHandler" class = "com.SpringSandbox.SpringSandbox.TheSpringContext.CStartEventHandler"/>
    <bean id = "cStopEventHandler" class = "com.SpringSandbox.SpringSandbox.TheSpringContext.CStopEventHandler"/>

</beans>